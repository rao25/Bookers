<h1>Books</h1>

 <h4>Title</h4>
 <h4>Body</h4>

<% @books.each do |book| %>
  
  <span><%= book.title %></span>
  
  <span><%= book.body %></span>
  
  <span>
  <%= link_to"Show",book_path(book.id) %>
  <%= link_to"Edit",edit_book_path(book.id) %>
  <%= link_to"Destory",book_path(book.id), method: :delete, "data-confirm" => "Are yoy sureï¼Ÿ" %>
  </span>

<% end %>


